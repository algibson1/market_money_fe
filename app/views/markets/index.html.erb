<h1>Markets</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>     </th>
    </tr>
  </thead>
  
  <tbody>
  <% @markets.each do |market| %>
    <div id="market-<%= market.id %>">
      <tr>
        <td><%= market.name %></td>

        <td><%= market.city %></td>

        <td><%= market.state %></td>

        <td><%= button_to "More Info", market_path(market.id), method: :get %></td>

      </tr>
    </div>
  <% end %>
  </tbody>
</table>